<div class="border-form-div">

  <%= form_for(@coupon) do |f| %>
    <% if @coupon.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@coupon.errors.count, "error") %> prohibited this coupon from being saved:</h2>

        <ul>
        <% @coupon.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description,class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :value %>
      <%= f.number_field :amount, in: 0..100, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :expiration_date %><br>
      <%= f.datetime_select :expiration, class: "form-control", order: [ :month,:day, :year], ampm: true %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>


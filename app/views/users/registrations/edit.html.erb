<div class="border-form-div">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<% if current_user.business%>
<a href="#" class="business-click">click here to edit business profile</a>
<%end%>
  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, :autofocus => true, :placeholder => 'Full Name' %>
  </div>

   <div class="field">
    <%=f.label :age %>
    <%= f.number_field :age, :placeholder => 'AGE', in: 18..75 %><br>
  </div>

   <div class="field">
    <%=f.label :transportation %>
    <%= f.select :transportation, options_for_select(%w[Bicycle Bus/Train Car]) %>
  </div>

   <div class="field">
    <%=f.label :neighborhood %>
  <%= f.select :neighborhood, options_for_select(%w[Brickell Coral_Gables Miami_Beach Wynwood]) %>
    </div>

   <div class="field">
    <%=f.label :Profile_picture %>
    <%= f.file_field :profilepic%>
    </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

<div class="business-signup">
    <%= f.fields_for :business do |business_fields| %>
        <%= business_fields.label :business_name %>
        <%= business_fields.text_field :name, :placeholder => 'Chris hippy cupcakes'%>
        <%= business_fields.label :address %><br>
        <%= business_fields.text_area :address, cols: 27, rows: 2, :placeholder => 'e.g. 1200 ne 2 ct, Miami FL 33137'%>
         <%= business_fields.label :business_description %><br>
        <%= business_fields.text_area :description, cols: 27, rows: 5, :placeholder => 'we serve 420 cupcakes!'%>
         <%= business_fields.label :type_of_business %>
        <%= business_fields.select :typeofbusiness, options_for_select(%w[Bar Retail Restaurant Store]) %>
      <% end %>
  </div>


  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h6>Cancel my account</h6>
<span>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></span>

<%= link_to "Back", :back %>
</div>
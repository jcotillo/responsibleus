<div class="border-form-div">
  <h2>Sign up</h2>
  <a href="#" class="business-click">click here to sign up as a business</a>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.label :full_name %>
    <%= f.text_field :full_name, :autofocus => true, :placeholder => 'Full Name' %>
    <%=f.label :age %>
    <%= f.number_field :age, :placeholder => 'AGE', in: 18..75 %><br>
    <%=f.label :transportation %>
    <%= f.select :transportation, options_for_select(%w[Bicycle Bus/Train Car]) %>
    <%=f.label :neighborhood %>
  <%= f.select :neighborhood, options_for_select(%w[Brickell Coral_Gables Miami_Beach Wynwood]) %>
    <%= f.email_field :email, :placeholder => 'Email address' %>
    <%= f.password_field :password, :placeholder => 'Password' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %><br>
    <%=f.label :Profile_picture %>
    <%= f.file_field :profilepic%><br>

  <div class="business-signup">
    <%= f.fields_for :business do |business_fields| %>
        <%= business_fields.label :business_name %>
        <%= business_fields.text_field :name, :placeholder => 'Chris hippy cupcakes'%>
        <%= business_fields.label :address %><br>
        <%= business_fields.text_area :address, cols: 27, rows: 2, :placeholder => 'e.g. 1200 ne 2 ct, Miami FL 33137'%>
         <%= business_fields.label :business_description %><br>
        <%= business_fields.text_area :description, cols: 27, rows: 5, :placeholder => 'we serve 420 cupcakes!'%>
         <%= business_fields.label :type_of_business %>
        <%= business_fields.select :typeofbusiness, options_for_select(%w[Bar Retail Restaurant Store]) %>
      <% end %>
  </div>
    <%= f.submit "Sign up",:class=>'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


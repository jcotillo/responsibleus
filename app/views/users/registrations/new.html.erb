<div class="userregs container">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="regularform col-lg-4 col-lg-offset-4">
    <a href="#" class="business-click">click here to sign up as a business</a>
      <%= devise_error_messages! %>
      <div class="form-group">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, :class => "form-control", :autofocus => true, :placeholder => 'Full Name' %>
     </div>
      <div class="form-group">
      <%=f.label :age %>
      <%= f.number_field :age, :class =>  "form-control",:placeholder => 'AGE', in: 18..75 %>
      </div>
      <div class="form-group">
      <%=f.label :transportation %>
      <%= f.select :transportation, options_for_select(%w[Bicycle Bus Train Car Carpool ]) %>
      </div>
      <div class="form-group">
      <%=f.label :zipcode %>
      <%= f.text_field :zipcode, :class =>  "form-control", :placeholder => '33145' %>
      </div>
      <div class="form-group">
      <%= f.email_field :email, :class =>  "form-control", :placeholder => 'Email address' %>
      </div>
      <div class="form-group">
      <%= f.password_field :password, :class =>  "form-control", :placeholder => 'Password' %>
      </div>
      <div class="form-group">
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => 'Password confirmation' %><br>
      </div>
      <div class="form-group">
      <%=f.label :Profile_picture, class: "form-control" %>
      <%= f.file_field :profilepic, class: "form-control"%>
      </div>
  </div>
    <div class="business-signup col-lg-4">
      <%= f.fields_for :business do |business_fields| %>
      <br><br>
          <h1><%= business_fields.label :business%></h1>
          <div class="form-group">
          <%= business_fields.text_field :name, :class => "form-control", :placeholder => 'Chris hippy cupcakes'%>
          </div>
          <div class="form-group">
           <%= business_fields.label :type_of_business %>
          <%= business_fields.select :typeofbusiness, :class => "form-control", :options_for_select => %w[Bar Retail Restaurant Store] %>
          </div>
          <div class="form-group">
          <%= business_fields.label :zipcode %>
          <%= business_fields.text_field :zipcode, :class => "form-control", :placeholder => '33025' %>
          </div>
          <div class="form-group">
           <%= business_fields.label :business_description %><br>
          <%= business_fields.text_area :description, :class => "form-control", cols: 27, rows: 5, :placeholder => 'we serve 420 cupcakes!'%>
          </div>
        <% end %>
    </div>
</div>
    <div class="row">
     <div class="col-lg-offset-5"> 
      <%= f.submit "Sign up",:class=>'btn btn-primary' %>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
</div>
